<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7d3d3"
    tools:context=".MainActivity">
    <ImageView
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/header"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wellcome To \nOur Blood Donating App"
        android:fontFamily="@font/belinda_script"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"

        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome :  "
            android:textSize="14dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Admin@gmail.com"
            android:textSize="14dp"
            android:textColor="#000"/>

    </LinearLayout>

    <Button
        android:id="@+id/search_blood"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search blood"
        android:textColorHint="#f1efef"
        android:background="@drawable/log_button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/post_request"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="post request"
        android:textColorHint="#fcfafa"
        android:layout_marginTop="10dp"
        android:background="@drawable/log_button" />

    <Button
        android:id="@+id/donate_dlood"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/log_button"
        android:hint="blood donate"
        android:textColorHint="#fffafa" />
</LinearLayout>